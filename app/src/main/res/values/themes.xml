<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mukminapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueberry</item>
        <item name="colorPrimaryVariant">@color/blueberry</item>
        <item name="colorOnPrimary">@color/bg_color</item>
        <item name="backgroundColor">@color/bg_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">26.2sp</item>
        <item name="android:textColor">@color/blueberry</item>
    </style>

    <style name="HeaderTitleBigLight">
        <item name="android:gravity">end</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="HeaderTitleBigBold">
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>

    <style name="TabsTitleActive2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/blueberry</item>
    </style>

    <style name="TabsTitleInactive2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#555259</item>
    </style>

    <style name="ArticleParagraph">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>
</resources>